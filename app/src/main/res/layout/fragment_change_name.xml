<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/change_dialog_back"
        android:layout_marginBottom="100dp"
        >

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingVertical="24dp"
           android:paddingHorizontal="24dp"
           >

           <RelativeLayout
               android:id="@+id/change_loader_parent"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:visibility="gone"
               >

               <ProgressBar
                   android:id="@+id/change_progress"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_centerInParent="true"/>

           </RelativeLayout>

           <LinearLayout
               android:id="@+id/change_dialog_contents"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Enter your name"
                   android:textColor="@color/white"
                   android:fontFamily="@font/bahn_font"
                   android:textSize="20sp"/>

               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/change_name_inp_layout"
                   android:layout_marginTop="16dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   >

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/change_name_inp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/bahn_font"
                       android:textSize="16sp"
                       android:inputType="textPersonName"
                       android:textColor="#fff"
                       />

               </com.google.android.material.textfield.TextInputLayout>

               <Button
                   android:id="@+id/change_name_btn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Submit"
                   android:background="@drawable/otp_btn_back"
                   android:textColor="#fff"
                   android:fontFamily="@font/bahn_font"
                   android:layout_marginTop="16dp"
                   android:textSize="16dp"
                   android:paddingHorizontal="8dp"
                   android:paddingVertical="8dp"
                />
           </LinearLayout>

       </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
